package soccer;

import javax.sound.midi.Soundbank;

public class Jogador {
	private String name;
	private float altura;
	private int idade;
	private boolean atividade;
	private boolean dm;
	
	public boolean jogar() {
		return atividade = true;
	}
	public boolean machucar(boolean atividade) {
		if (atividade != true) {
			return dm = false;
		}else {
			System.out.println("O jogador está machucado");
			return dm = true;
			
		}
	}
	
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public float getAltura() {
		return altura;
	}
	public void setAltura(float altura) {
		this.altura = altura;
	}
	public int getIdade() {
		return idade;
	}
	public void setIdade(int idade) {
		this.idade = idade;
	}
	public boolean getAtividade() {
		return atividade;
	}
	public void setAtividade(boolean atividade) {
		this.atividade = atividade;
	}
	public boolean isDm() {
		return dm;
	}
	public void setDm(boolean dm) {
		this.dm = dm;
	}
	
	
}
